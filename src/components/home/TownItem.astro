---
import type {Town as TownType} from "../../data/towns";

const {town} = Astro.props;

interface Props {
    town: TownType;
    }
---
<div id={town.slug} transition:name={'transition-' + town.slug} class="bg-cyan-800 p-6 w-1/3 mx-auto my-8 text-white shadow-lg shadow-gray-800">
    <h4 class="font-bold mb-3">{town.name}</h4>
    <p class="text-xs">{town.description}</p>
    <a href={town.slug} class="mt-4 bg-cyan-600 p-3 block text-center rounded">Más información</a>
</div>
