---
import type {Town as TownType} from "../../data/towns";

const {town} : Props = Astro.props;

interface Props {
    town: TownType;
}
---
<div transition:name={'transition-' + town.slug} class="bg-cyan-800 px-6 pt-6 pb-10 w-2/3 mx-auto my-8 text-white shadow-lg shadow-gray-800">
    <h4 class="font-bold mb-12 text-4xl border-b-4">{town.name}</h4>
    <div class="w-2/3 mx-auto">
        <p class="text-xs mb-2">{town.description}</p>
        <p class="text-xs mb-2">{town.detailedDescription}</p>
        <p class="text-xs mb-2">{town.name} cuenta con una poblaci√≥n de {town.population} habitantes.</p>
        <a href={"/#" + town.slug} class="mt-4 bg-cyan-600 p-3 block text-center rounded">Volver al listado</a>

    </div>
</div>
